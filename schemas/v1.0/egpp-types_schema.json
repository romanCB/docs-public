{
  "$id": "types",  
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "External Game Platform Provider schema types",
  "definitions": {
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3,4}$"
    },
    "statusError": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "statusDescription": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "playerId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_.-]{1,20}$"
    },
    "balance": {
      "type": "integer",
      "minimum": 0
    },
    "externalId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]{36}$"
    },
    "round": {
      "type": "integer",
      "minimum": 1,
      "maximum": 960
    },
    "amount": {
      "type": "integer",
      "minimum": 1
    },
    "game": {
      "enum": [ "wallstroulette", "wallstbaccarat", "weekendforex", "weekendbianry", "roulettefx" ]
    }
  }
}